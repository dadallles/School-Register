@using Microsoft.AspNetCore.Mvc.Localization
@model SchoolRegister.ViewModels.DTOs.AttachDetachStudentToGroupDto
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["AttachStudentToGroup"];
}

<h2>@Localizer["AttachStudentToGroup"]</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AttachStudentToGroup">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" value="@ViewBag.StudentId" asp-for="StudentId" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="GroupId" class="control-label">@Localizer["Group"]</label>
                <select asp-for="GroupId" class="form-control"
                        asp-items="@ViewBag.GroupsSelectList"></select>
                <span asp-validation-for="GroupId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Localizer["Save"]" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ViewStudents" asp-controller="Student">@Localizer["BackToList"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
