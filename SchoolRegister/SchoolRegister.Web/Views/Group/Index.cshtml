@using Microsoft.AspNetCore.Mvc.Localization
@model IEnumerable<SchoolRegister.ViewModels.VMs.GroupVm>
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Index"];
}

<h2>@Localizer["Index"]</h2>

<p>
    <a asp-action="AddOrUpdateGroup">@Localizer["New"]</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Localizer["Name"]
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink(@Localizer["Edit"].Value, "AddOrUpdateGroup", new { id = item.Id }) |
                    @Html.ActionLink(@Localizer["Delete"].Value, "RemoveGroup", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
