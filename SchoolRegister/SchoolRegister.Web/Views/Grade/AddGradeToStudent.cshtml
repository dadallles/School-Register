@using Microsoft.AspNetCore.Mvc.Localization
@using SchoolRegister.BLL.Entities
@model SchoolRegister.ViewModels.DTOs.AddGradeToStudentDto
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["AddGrade"];
}

<h2>@Localizer["AddGrade"]</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddGradeToStudent">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StudentId" class="control-label">@Localizer["Student"]</label>
                <select asp-for="StudentId" class="form-control"
                        asp-items="@ViewBag.StudentsSelectList"></select>
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubjectId" class="control-label">@Localizer["Subject"]</label>
                <select asp-for="SubjectId" class="form-control"
                        asp-items="@ViewBag.SubjectsSelectList"></select>
                <span asp-validation-for="SubjectId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GradeValue" class="control-label">@Localizer["Grade"]</label>
                <select asp-for="GradeValue" class="form-control"
                        asp-items="Html.GetEnumSelectList<GradeScale>()"></select>
                <span asp-validation-for="GradeValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="TeacherId" value="@ViewBag.TeacherId" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="@Localizer["Add"]" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
