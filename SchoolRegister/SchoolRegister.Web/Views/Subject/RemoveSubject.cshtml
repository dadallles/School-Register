@using Microsoft.AspNetCore.Mvc.Localization
@model SchoolRegister.ViewModels.VMs.SubjectVm
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["RemoveSubject"];
}

<h2>@Localizer["RemoveSubject"]</h2>

<h3>@Localizer["RemoveSubjectConfirm"]</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt>
            @Localizer["Name"]
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Localizer["Description"]
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>
            @Localizer["TeacherName"]
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TeacherName)
        </dd>
        <dt>
            @Localizer["TeacherId"]
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TeacherId)
